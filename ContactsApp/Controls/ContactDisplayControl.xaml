<UserControl x:Class="ContactsApp.Controls.ContactDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#AAE5E5E5">
        <StackPanel>
            <TextBlock x:Name="nameTextBlock" Text="Name LastName" FontSize="20" FontWeight="Bold" />
            <TextBlock x:Name="phoneTextBlock" Text="example@domain.com" FontSize="15" Foreground="DodgerBlue" />
            <TextBlock x:Name="emailTextBlock" Text="(123) 456 7890" FontSize="15" FontStyle="Italic" />
        </StackPanel>
    </Grid>
</UserControl>
